<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SimpleShell.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SimpleShell.Views">

    <!-- Página raíz -->
    <!-- AppShell es un contenedor de navegación (Shell). Dentro de AppShell se define qué página -->
    <!-- se muestra primero. Normalmente, esa es MainPage. -->
    <ShellContent
        Title="Inicio"
        Route="main"
        ContentTemplate="{DataTemplate views:MainPage}" />
</Shell>
