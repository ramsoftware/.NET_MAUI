<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejemplo.MainPage">

    <ScrollView>

        <VerticalStackLayout Padding="24" Spacing="16">

            <Label Text="Elige una opción:" FontAttributes="Bold" />

            <!-- Grupo 1: todos comparten GroupName="grupoOpciones" -->
            <RadioButton x:Name="RbA"
                         GroupName="grupoOpciones"
                         Content="Opción A" />
            <RadioButton x:Name="RbB"
                         GroupName="grupoOpciones"
                         Content="Opción B" />
            <RadioButton x:Name="RbC"
                         GroupName="grupoOpciones"
                         Content="Opción C" />

            <Button Text="Mostrar selección"
                    Clicked="OnMostrarSeleccionClicked" />

            <!-- Editor multilínea para mostrar resultado -->
            <Editor x:Name="ResultadoEditor"
                    HeightRequest="120"
                    Placeholder="Aquí aparecerá la opción seleccionada"
                    AutoSize="TextChanges" />

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
