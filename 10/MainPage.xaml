<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejemplo.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">


            <Label Text="Selecciona una o varias opciones:" FontAttributes="Bold" />

            <!-- Varias opciones como CheckBox -->
            <HorizontalStackLayout Spacing="8">
            <CheckBox x:Name="ChkOpA" /> <Label Text="Opción A" VerticalTextAlignment="Center" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="8">
            <CheckBox x:Name="ChkOpB" /> <Label Text="Opción B" VerticalTextAlignment="Center" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="8">
            <CheckBox x:Name="ChkOpC" /> <Label Text="Opción C" VerticalTextAlignment="Center" />
            </HorizontalStackLayout>

            <!-- Botón para recolectar las seleccionadas -->
            <Button Text="Mostrar seleccionadas"
                    Clicked="OnMostrarSeleccionadasClicked" />

            <!-- Editor multilínea para mostrar resultado -->
            <Editor x:Name="ResultadoEditor"
                    HeightRequest="140"
                    Placeholder="Aquí aparecerán las opciones activadas"
                    AutoSize="TextChanges" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
