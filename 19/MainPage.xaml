<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:gfx="clr-namespace:Graficos"
             x:Class="Graficos.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <!-- Alto suficiente para que se vea la línea (y=20) -->
            <GraphicsView HeightRequest="60" BackgroundColor="Transparent">
                <GraphicsView.Drawable>
                    <gfx:DibujarFiguras />
                </GraphicsView.Drawable>
            </GraphicsView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
