<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejemplo.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="Número 1" />
            <Entry x:Name="numA" Keyboard="Numeric" />

            <Label Text="Número 2" />
            <Entry x:Name="numB" Keyboard="Numeric" />

            <Button Text="Sumar" Clicked="ClicSumar" />

            <Entry x:Name="numR" Keyboard="Numeric" IsReadOnly="True"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
