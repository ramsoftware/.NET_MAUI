<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejemplo.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="Fecha de nacimiento:" />
            <DatePicker x:Name="FechaNace" Date="{x:Static System:DateTime.Today}"></DatePicker>

            <Button Text="Calcular edad" Clicked="CalcularEdad" />

            <Label Text="Resultado:" />
            <Entry x:Name="Salida" IsReadOnly="True" Placeholder="Aquí verás la edad" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
